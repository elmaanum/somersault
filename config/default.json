{
  "build": {
    "linting": {
      "formatter": "stylish",
      "paths": [
        "./lib/**/*.js"
      ],
      "testPaths": [
        "./tst/**/*.js"
      ]
    },
    "documentation": {
      "outputPath": "./docs/code",
      "undocumentedIdentifiers": false,
      "unexportedIdentifiers": true,
      "testType": "mocha",
      "testRoot": "./tst/"
    },
    "testing": {
      "findPattern": "./tst/**/*.js",
      "coverage": {
        "enforceThreshold": 90,
        "includeUntested": true,
        "instrumentPath": "./lib/**/*.js",
        "outputPath": "./docs/code-coverage",
        "tempPath": "./temp/code-coverage"
        }
    }
  }
}